pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                echo "Cloning repository..."
                git url: 'https://github.com/AnshuKumar380/todo-app.git', branch: 'main', credentialsId: 'Anshu'


            }
        }

        stage('Deploy ToDo App') {
            steps {
                echo "Deploying ToDo App to /var/www/html..."

                // Clear old files (optional but clean)
                sh 'sudo rm -rf /var/www/html/*'

                // Copy new files (ensure only public files are copied)
                sh 'sudo cp -r * /var/www/html/'
            }
        }
    }

    post {
        success {
            echo '‚úÖ Deployment Successful üéâ'
        }
        failure {
            echo '‚ùå Deployment Failed. Please check the logs.'
        }
    }
}