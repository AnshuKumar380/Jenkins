pipeline {
    agent any

    stages {
        stage('Clone Repo') {
            steps {
                git 'https://github.com/AnshuKumar380/todo-app.git'
            }
        }

        stage('Deploy ToDo App') {
            steps {
                echo "Deploying ToDo App..."
                // Copy your HTML to a web server directory (like /var/www/html)
                sh 'sudo cp -r * /var/www/html/'
            }
        }
    }

    post {
        success {
            echo 'Deployment Successful üéâ'
        }
        failure {
            echo 'Deployment Failed ‚ùå'
        }
    }
}
